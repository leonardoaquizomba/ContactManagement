@page "{id:long}"
@model ContactManagement.Pages.Contacts.DeleteModel
@{
    ViewData["Title"] = "Delete contact";
}
<div class="pagetitle">
    <h1>Contact</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item">Contact</li>
            <li class="breadcrumb-item active">Delete contact</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Delete contact</h5>
                    <form method="post">
                        <div class="row mb-3">
                            <label asp-for="Contact.Name" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Contact.Name" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Contact.Email" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Contact.Email" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Contact.Phone" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Contact.Phone" class="form-control" disabled />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <a class="col-sm-2 col-form-label" asp-page="/Contacts/Index">Contact list</a>
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-danger">Delete contact</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>