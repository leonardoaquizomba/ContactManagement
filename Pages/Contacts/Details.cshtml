@page
@model ContactManagement.Pages.Contacts.DetailsModel
@{
    ViewData["Title"] = "Details contact";
}

<div class="pagetitle">
    <h1>Contact</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item">Contact</li>
            <li class="breadcrumb-item active">Details contact</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Details contact</h5>
                    <form>
                        <div class="row mb-3">
                            <label asp-for="Contact.Name" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Contact.Name" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Contact.Email" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Contact.Email" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Contact.Phone" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Contact.Phone" class="form-control" disabled />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <a class="col-sm-2 col-form-label" asp-page="./Index">Contact list</a>
                            <a class="col-sm-2 col-form-label" asp-page="./Edit" asp-route-id="@Model.Contact.Id">Edit Contact</a>
                            <a class="col-sm-2 col-form-label" asp-page="./Delete" asp-route-id="@Model.Contact.Id">Delete Contact</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>