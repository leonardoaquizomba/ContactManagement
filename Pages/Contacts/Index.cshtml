@page
@model ContactManagement.Pages.Contacts.IndexModel
@{
    ViewData["Title"] = "Contact list";
}

<div class="pagetitle">
    <h1>Contact</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item">Contact</li>
            <li class="breadcrumb-item active">Contact list</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Contact list</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">@Html.DisplayNameFor(model => model.Contacts[0].Id)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Contacts[0].Name)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Contacts[0].Email)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Contacts[0].Phone)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contact in Model.Contacts)
                            {
                                <tr>
                                    <th scope="row">@Html.DisplayFor(modelItem => contact.Id)</th>
                                    <td>@Html.DisplayFor(modelItem => contact.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => contact.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => contact.Phone)</td>
                                    <td>
                                        <a asp-page="./Edit" asp-route-id="@contact.Id">Edit</a> |
                                        <a asp-page="./Details" asp-route-id="@contact.Id">Details</a> |
                                        <a asp-page="./Delete" asp-route-id="@contact.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
